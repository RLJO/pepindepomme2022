                                    <label for="exampleInputEmail1">Adresse*</label>
                                    <br/>
                                    <input name="adresse" t-value="checkout['adresse']" type="text" style="height: 36px;"
                                           t-att-value="'adresse' in checkout and checkout['adresse']"
                                           class="form-control" aria-describedby="emailHelp" required="true"/>
                                </div>
                                <div class="form-group" data-type="char" data-name="Field">
                                    <label for="exampleInputEmail1">Compl√©ment d'adresse</label>
                                    <br/>
                                    <input t-value="checkout['complement_adress']" name="complement_adress" style="height: 36px;"
                                           t-att-value="'complement_adress' in checkout and checkout['complement_adress']"
                                           class="form-control" aria-describedby="emailHelp"/>
                                </div>
                                <div class="form-group" data-type="char" data-name="Field">
                                    <div class="row">
                                        <div class="o_colored_level col-lg-6">
                                            <label for="exampleInputEmail1">Code postal*</label>
                                            <br/>
                                            <input name="code_post" t-value="checkout['code_post']" style="height: 36px;"
                                                   t-att-value="'code_post' in checkout and checkout['code_post']"
                                                   class="form-control" id="exampleInputEmail1"
                                                   aria-describedby="emailHelp"/>


                                        </div>
                                        <div class="o_colored_level col-lg-6">
                                            <label for="exampleInputEmail1">ville*</label>
                                            <br/>
                                            <input name="ville" required="true" t-value="checkout['ville']" style="height: 36px;"
                                                   t-att-value="'ville' in checkout and checkout['ville']"
                                                   class="form-control" id="exampleInputEmail1"
                                                   aria-describedby="emailHelp"/>


                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" data-type="char" data-name="Field">
                                    <div class="row">
                                        <div class="o_colored_level col-lg-6">
                                            <label for="exampleInputEmail1">Pays*</label>
                                            <br/>


                                            <select name="country_id" id="country_id"
                                                    class="browser-default custom-select" required="true" style="height: 36px;">
                                                <option value=""/>
                                                <t t-foreach="countries" t-as="c">

                                                    <option t-att-value="c.id"
                                                            t-att-selected="c.id == ('country_id' in checkout and  checkout['country_id']  and int(checkout['country_id']))">
                                                        <t t-esc="c.name"/>
                                                    </option>
                                                </t>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <p class="mb-4" style="font: normal normal normal 14px/24px Roboto;color: #000000;">*
                                    Champs obligatoires
                                </p>

                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="submitted" value="1"/>


                                <div class="d-flex justify-content-between">

                                    <a role="button" href="/my/adress" class="btn btn-secondary btnsec" style="padding-top: 16px; height:52px">
                                        <i class="fa fa-chevron-left mr-1"/>
                                        <span>Retour</span>
                                    </a>
                                    <button type="submit" name="submit" class="btn btn-primary btnn">Suivant
                                    </button>


                                </div>
                            </div>
                        </form>
                    </section>

                </div>
            </div>
        </t>
    </template>

