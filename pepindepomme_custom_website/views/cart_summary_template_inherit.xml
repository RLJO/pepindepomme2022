<odoo>
    <template id="cart_summary_custom" inherit_id="website_sale.cart_summary">
        <xpath expr="//div[@class='card']" position="after">

            <style>
                th{
                font: normal normal normal 14px/24px Roboto;
                color: #000000;
                }
                td{
                color: #000000;
                }
                tr{
                background-color: transparent !important;
                }
                td.text-right{
                text-align: left !important;
                }
                .card-body .text-muted, .o_colored_level .card-body .text-muted{
                color: #000000 !important;
                font: normal normal normal 14px/24px Roboto;
                }
                .show_coupon {
                font: normal normal normal 14px/24px Roboto;
                color: #009EBF;
                }

            </style>
        </xpath>

        <xpath expr="//table[@id='cart_products']" position="after">
             <div class="card" t-if="show_method">
            <div class="card-body" id="shipping_and_billing" >

                <t t-set="same_shipping" t-value="bool(order.partner_shipping_id==order.partner_id or only_services)"/>
                <div>
                    <b>Billing<t t-if="same_shipping and not only_services">&amp; Shipping</t>:
                    </b>
                    <span t-esc="order.partner_id"
                          t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"
                          class="address-inline"/>
                </div>
                <div t-if="not same_shipping and not only_services" groups="sale.group_delivery_invoice_address">
                    <b>Shipping:</b>
                    <span t-esc="order.partner_shipping_id"
                          t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"
                          class="address-inline"/>
                </div>
                <div class="mt-4">
                    <a class="btn-outline no-decoration pl-4 pr-4 pt-1 pb-1" href="/shop/checkout">Edit</a>
                </div>
            </div>
             </div>
        </xpath>

    </template>
</odoo>