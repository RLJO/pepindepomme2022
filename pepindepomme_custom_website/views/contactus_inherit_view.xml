<odoo>
    <template id="website.contactus" priority="16" name="Contactez-nous">
        <t t-call="website.layout">
            <div id="wrap">
                <style>
                    .s_title {
                    font: normal normal bold 36px/29px Roboto;
                    }
                    .s_website_form_label{
                    font: normal normal bold 14px/26px Roboto;
                    color: black !important;
                    margin-bottom: 7px !important;
                    }
                    .a-custom {
                    font: normal normal normal 14px/29px Roboto;
                    letter-spacing: 0px;
                    color: #0088FF;

                    }

                    .s_website_form_input {
                    border: 1px solid #939393;
                    height: 36px !important;
                    }
                    .s_website_form_input_msg {
                    border: 1px solid #939393;
                    }
                    .s_website_form_send {
                    font: normal normal bold 16px/19px Roboto;
                    letter-spacing: 0px;
                    color: #FFFFFF;

                    }
                    .contact-title{
                    font: normal normal bold 16px/19px Roboto;
                    letter-spacing: 0px;
                    color: #91B508;


                    }
                    .img-icon {
                    width: 21px;
                    height: 21px;

                    }
                    .contact-span {
                    font: normal normal bold 14px/24px Roboto;
                    }
                    .t2-contact{
                    font: normal normal bold 30px/29px Roboto;
                    }
                    .a-maps{
                    text-decoration: underline;
                    font: normal normal normal 14px/24px Roboto;
                    letter-spacing: 0px;
                    color: #0088FF;
                    opacity: 1;
                    }
                    address i {
                    display:none !important;
                    }

                    address,.paragraph{
                    font: normal normal normal 14px/24px Roboto;
                    letter-spacing: 0px;
                    color: #000000;

                    }
                    .form-check-label{
                    font: normal normal normal 14px/29px Roboto;
                    color:black;
                    }

                </style>
                <!--<div class="oe_structure">
                    <section class="s_title parallax s_parallax_is_fixed  pt24 pb24" data-vcss="001"
                             data-snippet="s_title" data-scroll-background-ratio="1">
                        <h1 class="text-center text-black">Contact us</h1>

                    </section>

                </div>-->
                <div class="container mt-4 mb-5">
                    <div class="row">
                        <div class="col-12 col-lg-7 ml-lg-auto">
                            <div class="oe_structure">
                                <section class="s_text_block" data-snippet="s_text_block">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                 <section class="s_title parallax s_parallax_is_fixed  pt24 pb24" data-vcss="001"
                                     data-snippet="s_title" data-scroll-background-ratio="1">
                                <p class="text-center text-black t2-contact">Contactez-nous</p>

                            </section>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="text-center my-3" name="mail_button">
                                <a role="button" t-attf-href="mailto:{{ res_company.email }}" class="btn btn-primary"
                                   id="o_contact_mail">Send us an email
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4 mt-4 mt-lg-0 mr-lg-auto">

                            <section class="s_title parallax s_parallax_is_fixed  pt24 pb24" data-vcss="001"
                                     data-snippet="s_title" data-scroll-background-ratio="1">
                                <p class="text-left text-black t2-contact w-50">Informations de <br/> la boutique</p>

                            </section>

                            <!--<t t-call="website.company_description"/>-->
                            <span class="contact-title mb-2" t-field="res_company.name"/>
                            <address itemscope="itemscope" itemtype="http://schema.org/Organization">
                                <!-- TODO widget contact must add itemprop attributes -->
                                <div t-field="res_company.partner_id"
                                     t-options="{                 &quot;widget&quot;: &quot;contact&quot;,                 &quot;fields&quot;: [&quot;address&quot;]}"/>
                                <t t-if="not res_company.google_map_img()">

                                    <img src="pepindepomme_custom_website/static/src/img/annex/map-pin.svg"
                                         class="img-icon" role="img" aria-label="Address"
                                         title="Address"/>
                                    <a t-att-href="res_company.google_map_link()" target="_BLANK" class="a-maps">Google
                                        Maps
                                    </a>
                                </t>
                            </address>

                            <p class="contact-title  mt-3 mb-1">Horaires magasin :</p>
                            <p class="paragraph">

                                Lundi : 10:00 - 12:30 et 14:00 - 19:30
                                <br/>
                                Mardi : 09:30 - 12:30 et 14:00 - 19:30
                                <br/>
                                Mercredi : 09:30 - 12:30 et 14:00 - 19:30
                                <br/>
                                Jeudi : 09:30 - 12:30 et 14:00 - 19:30
                                <br/>
                                Vendredi : 09:30 - 12:30 et 14:00 - 19:30
                                <br/>
                                <span class="contact-span">Fermé samedi et dimanche</span>


                            </p>
                            <p class="contact-title  mt-3 mb-1">Horaires service client :</p>
                            <p  class="paragraph">
                                Du lundi au vendredi* :10:00 - 12:00 et 13:00 - 17:00
                                <br/>
                                *sauf les jours fériés
                            </p>
                            <p class="contact-title  mt-3 mb-1">Nous contacter par téléphone :</p>
                            <img src="/pepindepomme_custom_website/static/src/img/annex/phone.svg" class="img-icon"/>
                            <span t-field="res_company.phone"  class="paragraph"/>


                            <p class="contact-title  mt-3 mb-1">Nous contacter par e-mail :</p>
                            <img src="/pepindepomme_custom_website/static/src/img/annex/mail.svg" class="img-icon"/>
                            &#160;&#160;<span t-field="res_company.email"  class="paragraph"/>


                        </div>
                    </div>

                </div>
                <div class="oe_structure mt-2"/>


                <section class="s_icon_block_2 pb32 o_colored_level pt0" style="border-top: solid 1px #CFCFD1"
                         data-snippet="s_icon_block_2" data-name="Icon Block - 2">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 py-3 text-center o_colored_level col-lg-4">
                                <h5 class="mt-3">
                                    <img class="img-fluid o_we_custom_image"
                                         src="/pepindepomme_custom_website/static/src/img/home/delivery.png" alt=""
