                                     data-mimetype="image/png" data-resize-width="117"/>
                            </div>
                        </div>
                    </div>
                </section>


            </div>
        </t>
    </template>
    <template id="contactus_form_custom" inherit_id="website_form.contactus_form" priority="16">
        <xpath expr="//form[@id='contactus_form']" position="replace">

            <form id="contactus_form" action="/website_form/" method="post" enctype="multipart/form-data"
                  class="o_mark_required" data-mark="*" data-model_name="mail.mail" data-success-mode="redirect"
                  data-success-page="/contactus-thank-you">
                <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-12 s_website_form_field s_website_form_custom s_website_form_required"
                         data-type="char" data-name="Field">

                        <label class="s_website_form_label" for="contact1">
                            <span class="s_website_form_label_content">Nom</span>
                            <span class="s_website_form_mark">*</span>
                        </label>

                        <input id="contact1" type="text" class="form-control s_website_form_input" name="Name"
                               required=""/>


                    </div>
                </div>
                <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-12 col-lg-6 s_website_form_field s_website_form_required"
                         data-type="email"
                         data-name="Field">

                        <label class="s_website_form_label" for="contact3">
                            <span class="s_website_form_label_content">Email</span>
                            <span class="s_website_form_mark">*</span>
                        </label>

                        <input id="contact3" type="email" class="form-control s_website_form_input" name="email_from"
                               required=""/>


                    </div>
                    <div class="form-group col-12 col-lg-6 s_website_form_field s_website_form_custom" data-type="char"
                         data-name="Field">

                        <label class="s_website_form_label" for="contact2">
                            <span class="s_website_form_label_content">Téléphone</span>
                        </label>
                        <input id="contact2" type="tel" class="form-control s_website_form_input" name="Phone"/>

                    </div>

                </div>
                <div class="s_website_form_rows row s_col_no_bgcolor">

                    <div class="form-group col-12 col-lg-6 s_website_form_field s_website_form_custom d-none"
                         data-type="char"
                         data-name="Field">

                        <label class="s_website_form_label" for="contact4">
                            <span class="s_website_form_label_content">Your Company</span>
                        </label>

                        <input id="contact4" type="text" class="form-control s_website_form_input" name="Partner Name"/>


                    </div>
                    <div class="form-group col-12 col-lg-6 s_website_form_field s_website_form_required"
                         data-type="char"
                         data-name="Field">

                        <label class="s_website_form_label" for="contact5">
                            <span class="s_website_form_label_content">Sujet</span>
                            <span class="s_website_form_mark">*</span>
                        </label>



                    <select class="form-control s_website_form_input" id="contact5" name="subject"
                               required="" >
                      <option value="Commande">Commande</option>
                      <option value="Service client">Service client</option>
                    </select>



                    </div>

                </div>
                <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-12 s_website_form_field s_website_form_custom s_website_form_required"
                         data-type="text" data-name="Field">

                        <label class="s_website_form_label" for="contact6">
                            <span class="s_website_form_label_content">Message</span>
                            <span class="s_website_form_mark">*</span>
                        </label>

                        <textarea id="contact6" class="form-control s_website_form_input_msg" name="Description" rows="7"
                                  required="" placeholder="Comment pouvons-nous vous aider ?"/>
                        <span>* Champs obligatoires</span>


                    </div>
                    <div class="form-group col-12 s_website_form_field s_website_form_dnone">

                        <label class="s_website_form_label" for="contact7">
                            <span class="s_website_form_label_content">Email To</span>
                        </label>

                        <input id="contact7" type="hidden" class="form-control s_website_form_input" name="email_to"/>


                    </div>
                </div>
                <div class="s_website_form_rows row s_col_no_bgcolor">

                    <div class="form-group col-12 s_website_form_field s_website_form_custom form-check s_website_form_required"
                         data-type="checkbox" data-name="Field">

                        <input class="s_website_form_input_msg" name="email_from" required="required"
                               type="checkbox" value="" id="confirm_input"/>
                        <label class="form-check-label text-black" for="defaultCheck1" >
                            J'ai lu <a href="/legal-notice" target="_blank" class="a-custom">les conditions générales</a> sur la protection des
                            données et j'y adhère sans réserve.
                        </label>


                    </div>
                </div>
                <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                        <a href="#" role="button" style="height: 52px;padding-top: 15px;" class="btn btn-primary btn-lg s_website_form_send btn btn-primary btn-lg s_website_form_send w-100 w-lg-25">Envoyer</a>
                        <span id="s_website_form_result"/>
                    </div>
                </div>
            </form>

        </xpath>

    </template>
</odoo>