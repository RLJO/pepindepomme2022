                                     data-original-src="/pepindepomme_custom_website/static/src/img/home/logo-sofinco.png"
                                     data-mimetype="image/png" data-resize-width="96"/>
                                <!--
                                <img class="img-fluid o_we_custom_image mr-4 mt-2"
                                     src="pepindepomme_custom_website/static/src/img/home/Image 101.png" alt="" loading="lazy"
                                     data-original-id="619" data-original-src="pepindepomme_custom_website/static/src/img/home/Image 101.png"
                                     data-mimetype="image/png" data-resize-width="39"/>
                                     -->
                                <img class="img-fluid o_we_custom_image mt-2"
