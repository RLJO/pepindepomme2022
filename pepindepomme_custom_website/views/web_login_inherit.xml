<odoo>
    <template id="web_login_custom" inherit_id="web.login" name="Quick view">
        <xpath expr="//form[@class='oe_login_form']" position="before">
                      <style>
                          label{
                          text-align: left;
                          font: normal normal bold 14px/26px Roboto;
                          letter-spacing: 0px;
                          color: #000000;
                          margin-bottom:7px !important;
                          }
                          button[type='submit']{
                          font: normal normal bold 16px/19px Roboto;
                          letter-spacing: 0px;
                          color: #FFFFFF;
                          height: 52px !important;
                          }
                          .ctitle{
                          font: normal normal normal 12px/24px Roboto;
                          letter-spacing: 0px;
                          color: #000000;
                          }
                          .underlinetitle{
                          text-decoration: underline;
                          font: normal normal bold 12px/24px Roboto;
                          letter-spacing: 0px;
                          color: #91B508;
                          }
                          .resetlbl{
                          text-align: center;
                          font: normal normal normal 12px/24px Roboto;
                          color: #000000;
                          text-decoration: underline;
                          }
                          #login,#password{
                          height:36px !important;
                          }
          </style>
 <p class="mt-4 ctitle text-center">
                    Vous n'avez pas encore de compte ? <a t-if="signup_enabled" class="underlinetitle"  t-attf-href="/web/signup?{{ keep_query() }}">Créer mon compte</a>
                </p>

        </xpath>

    </template>
    <template id="auth_signup_login_custom" inherit_id="auth_signup.login">
        <xpath expr="//a[@t-if='reset_password_enabled']" position="attributes">

            <attribute name="class">resetlbl</attribute>
        </xpath>
        <xpath expr="//a[@t-if='signup_enabled']" position="attributes">

            <attribute name="class">d-none</attribute>
        </xpath>
    </template>

    <template id="reset_password_custom" inherit_id="auth_signup.reset_password">
        <xpath expr="//t[@t-call='web.login_layout']" position="before">
               <style>
                   label{
                   text-align: left;
                   font: normal normal bold 14px/26px Roboto;
                   letter-spacing: 0px;
                   color: #000000;
                   margin-bottom:7px !important;
                   }
                   button[type='submit']{
                   font: normal normal bold 16px/19px Roboto;
                   letter-spacing: 0px;
                   color: #FFFFFF;
                   height: 52px !important;
                   }
                   .resetlbl{
                   text-align: center;
                   font: normal normal normal 12px/24px Roboto;
                   color: #000000;
                   text-decoration: underline;
                   }
                   #login{
                   height:36px !important;
                   }
            </style>
        </xpath>
    </template>

    <template id="auth_signup_fields_custom" inherit_id="auth_signup.fields">
            <xpath expr="//div[1]" position="before">
                        <style>
                            label{
                            text-align: left;
                            font: normal normal bold 14px/26px Roboto;
                            letter-spacing: 0px;
                            color: #000000;
                            margin-bottom:7px;
                            }
                            .cpan{
                            font: normal normal normal 12px/20px Roboto;
                            letter-spacing: 0px;
                            color: #939393;
                            }
                            .ctitle{
                            font: normal normal normal 12px/24px Roboto;
                            letter-spacing: 0px;
                            color: #000000;
                            }
                            .underlinetitle{
                            text-decoration: underline;
                            font: normal normal bold 12px/24px Roboto;
                            letter-spacing: 0px;
                            color: #91B508;
                            }
                            #login,#password,#confirm_password, #name{
                            height:36px !important;
                            }
                            button[type='submit']{
                            font: normal normal bold 16px/19px Roboto;
                            letter-spacing: 0px;
                            color: #FFFFFF;
                            height: 52px;
                            }
        </style>

<p class="mt-4 ctitle text-center">
                Vous aves déjà un compte ? <a class="underlinetitle" href="/web/login">Connectez-vous</a>
            </p>


            </xpath>
    <xpath expr="//div[last()]" position="after">
        <div>
                 <input type="checkbox" required="required" /><span class="ml-2 cpan">J’ai lu les conditions générales sur la protection des données et j’y adhère sans réserve. Lire les Conditions sur la protection des données</span>
            </div>

    </xpath>
    </template>

</odoo>