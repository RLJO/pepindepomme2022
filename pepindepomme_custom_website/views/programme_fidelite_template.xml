<odoo>
    <template id="programme_fidelite" name="programme fidelite">
        <t t-call="website.layout">
            <style>
                .title{
                text-align: left;
                font: normal normal bold 24px/29px Roboto;
                color: #000000;
                }
                .paragraph{
                font: normal normal normal 14px/24px Roboto;
                color: #000000;
                text-align: left;
                }
