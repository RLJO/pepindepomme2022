<odoo>
    <template id="product_price_custom" inherit_id="website_sale.product_price">
        <xpath expr="//h4[hasclass('oe_price_h4')]" position="replace">
            <style>
                .tp-discount-percentage{
                display:none !important;
                }
                .oe_price {
                font: normal normal bold 32px/38px Roboto;
                letter-spacing: 0px;
                color: #000000;

                }
                .oe_default_price {
                font: normal normal normal 20px/24px Roboto;
                letter-spacing: 0px;
                color: #6C757D;
                }
                .tp-product-label {
                font: normal normal bold 11px/18px Roboto;
                letter-spacing: 0px;
                color: #FFFFFF !important;
                background-color: #6D53AC !important;
                }
                .tp-product-label:after {
                border-color: #C866F0 transparent #C866F0 #6D53AC !important;
                }
            </style>
            <h4 class="oe_price_h4 css_editable_mode_hidden">


                <span class="oe_price" style="white-space: nowrap;" t-esc="combination_info['price']"
                      t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                <span itemprop="price" style="display:none;" t-esc="combination_info['price']"/>
                <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name"/>

                                <small t-attf-class="text-body ml-1 oe_default_price {{'' if combination_info['has_discounted_price'] else 'd-none'}}"
                       style="text-decoration: line-through; white-space: nowrap;"
                       t-esc="combination_info['list_price']"
                       t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>

                <!-- <t t-set="discount_percentage" t-value="round((combination_info['list_price'] - combination_info['price']) / combination_info['list_price'] * 100)"/>
-->
                <div t-if="product.dr_label_id"
                     t-attf-class="tp-product-label tp-product-label-color-#{product.dr_label_id.color} mb-3">
                    <span t-field="product.dr_label_id.name" style="font: normal normal bold 11px/18px Roboto;
letter-spacing: 0px;
color: #FFFFFF;
opacity: 1;"/>
                </div>
                <!--<span t-attf-class=" tp-product-label tp-product-label-color-orange tp-bare  {{'' if combination_info['has_discounted_price'] else 'd-none'}}"> Economisez <t t-esc="discount_percentage" /> % </span>
                 -->
            </h4>
        </xpath>
    </template>
</odoo>

