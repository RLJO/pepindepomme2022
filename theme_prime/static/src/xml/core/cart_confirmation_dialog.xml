<?xml version="1.0" ?>
<templates>
    <div t-name="theme_prime.cart_confirmation_dialog">
            <style>
        .img-custom {
        background-color: white;

        }
        .text-custom {
        background: #91B508 0% 0% no-repeat padding-box;
        }
        .lead {
        font: normal normal 18px/22px Roboto;

        }
        .p-c {
        padding-left: 0;
        padding-right: 0;
        }
        .h-c {
        font: normal normal bold 20px/24px Roboto;
        color: #000000 !important;
        }
        .btn-dis {
        font: normal normal 16px/19px Roboto;
        letter-spacing: 0px;
        color: #FFFFFF;
        height: 52px;
        }
        .btn-cart {
        font: normal normal 16px/19px Roboto;
        letter-spacing: 0px;
        color: #000000;
        border: 1px solid #000000;
        height: 52px;
        padding-top: 16px;
        }
        .o_default_snippet_text {
        font: normal normal bold 18px/22px Roboto;
        letter-spacing: 0px;
        color: #000000;
        }


    </style>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 text-center border-right py-3 dr-confim-col">
                    <span class="dr-confirm-product-image d-inline-block">
                        <img class="img img-fluid w-50 rounded-circle img-custom"
                             t-attf-src="/web/image/product.product/#{widget.data.product_id}/image_1024"/>
                        <span class="fa fa-check fa-2x text-primary text-custom"></span>
                    </span>
                    <h5 class="text-primary mt-4 mb-1">
                        <t t-esc="widget.data.product_name"/>
                    </h5>
                    <div class="lead text-black">Added successfully to cart.</div>
                </div>
                <div class="col-md-6 text-center py-3 d-flex d-flex flex-column justify-content-center p-c">
                    <p class="text-muted mb-2">Il y a
                        <b t-esc="widget.data.cart_quantity"/>
                        items in your cart.
                    </p>
                    <h5 class="h-c">Total du panier :
                        <span class="text-primary">
                            <t t-raw="widget.data.cart_amount_html"/>
                        </span>
                    </h5>
                    <div class="mt-3">
                        <button class="btn btn-primary mb-2 mr-2 btn-dis" data-dismiss="modal">Continue Shopping
                        </button>
                        <a href="/shop/cart" class="btn btn-outline-primary d_view_cart mb-2 btn-cart">View Cart</a>
                    </div>
                </div>
                <div class="col-md-12 text-left pt-10 border-top mb-3 d-none d-md-block"
                     t-if="widget.data.accessory_product_ids.length">
                    <div class="mt-4">
                        <h4 class="s_d_full_title">
                            <span class="s_d_title_text">
                                <!-- <p class="mb-0 d-inline-block o_default_snippet_text">You may also like</p>
                             -->
                                <p class="mb-0 d-inline-block o_default_snippet_text">Produits similaires</p>
                            </span>
                        </h4>
                    </div>
                    <div class="s_d_product_small_block droggol_product_snippet in_confirm_dialog"
                         data-ds-id="s_d_product_small_block" data-empty-message="No products are selected."
                         data-sub-message="Please select products from snippet option."
                         t-attf-data-products-params='{"selectionType":"manual","productIDs": #{widget.data.accessory_product_ids_str}}'>
                    </div>
                </div>
            </div>
        </div>
    </div>

</templates>
